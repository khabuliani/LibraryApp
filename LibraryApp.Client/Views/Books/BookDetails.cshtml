@model LibraryApp.Domain.Dto.BookDto

<h1>Book Details</h1>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Model.Authors
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Rate
        </dt>
        <dd class="col-sm-10">
            @Model.Rate
        </dd>
        <dt class="col-sm-2">
            CreationDate
        </dt>
        <dd class="col-sm-10">
            @Model.CreationDate.ToShortDateString()
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="AllBooks" class="btn btn-secondary">Cancel</a>
    </form>
</div>
