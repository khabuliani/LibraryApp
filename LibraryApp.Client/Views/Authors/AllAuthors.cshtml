@model IEnumerable<LibraryApp.Domain.Dto.GetAllAuthorDto>
@{
    var nameFilter = ViewData["NameFilter"] as string;
}
<h1>Authors</h1>
<form method="get">
    <div class="form-group">
        <label for="Name">Filter by Name</label>
        <input type="text" name="Name" id="Name" class="form-control" value="@nameFilter" />
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>
<a asp-action="Create" class="btn btn-primary">Create New</a>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.FirstName</td>
                <td>@author.LastName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@author.Id">View Details</a> |
                    <a asp-action="Edit" asp-route-id="@author.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@author.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
